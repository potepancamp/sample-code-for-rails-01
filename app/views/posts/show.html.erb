<section class="FormWrapper">
  <%= link_to :posts, class: "Link Link--with-icon" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short Link__icon" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
    </svg>
    一覧に戻る
  <% end %>

  <div class="PageTitle">
    <h2 class="PageTitle__text">
      <%= @post.title %>
    </h2>

    <%= link_to edit_post_path(@post.id) do %>
      <button class="btn Button Button--edit">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill Button__icon" viewBox="0 0 16 16">
          <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
        </svg>
        編集
      </button>
    <% end %>
  </div>

  <div class="table-responsive FormContainer">
    <table class="table table-bordered DetailTable">
      <tr>
        <th>
          開始日
        </th>

        <td>
          <%= l(@post.start_at, format: :default) %>
        </td>
      </tr>

      <tr>
        <th>
          終了日
        </th>

        <td>
          <%= l(@post.end_at, format: :default) %>
        </td>
      </tr>

      <tr>
        <th>
          終日
        </th>

        <td>
          <% if @post.is_all_day %>
            <strong>○</strong>
          <% end %>
        </td>
      </tr>

      <tr>
        <th>
          スケジュールメモ
        </th>

        <td>
          <%= @post.memo %>
        </td>
      </tr>
    </table>
  </div>
</section>